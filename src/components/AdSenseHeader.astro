---
// AdSenseHeader.astro
// Banner de cabecera con altura fija de 300px para evitar CLS
---

<div class="ad-header-container">
  <div class="ad-header-inner">
    <ins class="adsbygoogle"
         style="display:block"
         data-ad-client="ca-pub-9609544329602409"
         data-ad-slot="3198096987"
         data-ad-format="auto"
         data-full-width-responsive="true"></ins>
  </div>
</div>

<style>
  .ad-header-container {
    display: block;
    width: 100%;
    height: 300px;
    min-height: 300px;
    max-height: 300px;
    padding-top: 10px;
    margin: 0;
    background-color: #fff;
    overflow: hidden;
    box-sizing: border-box;
    position: relative;
    contain: strict;
  }

  .ad-header-inner {
    display: block;
    width: 100%;
    max-width: 1400px;
    height: 290px;
    min-height: 290px;
    max-height: 290px;
    margin: 0 auto;
    padding: 0;
    overflow: hidden;
    text-align: center;
    position: relative;
    contain: strict;
  }

  .ad-header-inner .adsbygoogle {
    display: block;
    width: 100%;
    height: 290px;
    min-height: 290px;
    max-height: 290px;
    margin: 0 auto;
    padding: 0;
  }

  /* Forzar dimensiones en el iframe generado por AdSense */
  .ad-header-inner ins,
  .ad-header-inner iframe {
    max-height: 290px !important;
    overflow: hidden !important;
  }
</style>
